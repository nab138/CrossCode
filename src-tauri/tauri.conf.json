{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["templates", "cpio"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "productName": "CrossCode",
  "mainBinaryName": "CrossCode",
  "version": "0.0.3",
  "identifier": "me.nabdev.crosscode",
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "cli": {
      "args": [
        {
          "name": "showMainWindow"
        }
      ]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZFOEM1NUQyOEUzNDc5MTcKUldRWGVUU08wbFdNYmg1MHM0S3p2c2x1OFZKVnN0NXNVSDMvakExMFZnMnczamxIVGdjNGY4Mm4K",
      "endpoints": [
        "https://github.com/nab138/CrossCode/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "CrossCode",
        "label": "main",
        "width": 1000,
        "height": 700,
        "useHttpsScheme": true,
        "visible": false,
        "url": "/"
      },
      {
        "title": "CrossCode (Loading)",
        "label": "splashscreen",
        "url": "/splash.html",
        "width": 200,
        "height": 250,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "visible": true,
        "center": true,
        "focus": true,
        "backgroundColor": "#171a1c"
      }
    ]
  }
}
